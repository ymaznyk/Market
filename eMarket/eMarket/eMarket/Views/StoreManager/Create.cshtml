@{
    ViewBag.Title = "Create";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<h2>Create Product</h2>
@model eMarket.Models.Product
@using (Html.BeginForm("Create", "StoreManager", FormMethod.Post, new { enctype = "multipart/form-data" })) {
    @Html.ValidationSummary(true)
        <div class="form-group select-width">
            @Html.LabelFor(model => model.CategoryId, "Category")
            @Html.DropDownList("CategoryId", null, new { @class = "form-control" })
            @Html.ValidationMessageFor(model => model.CategoryId)
        </div>
        <div class="form-group">
            @Html.LabelFor(model => model.Title)
            @Html.TextBoxFor(model => model.Title, new { @class = "form-control" })
            @Html.ValidationMessageFor(model => model.Title)
        </div>
        <div class="form-group">
            @Html.LabelFor(model => model.Price)
            @Html.TextBoxFor(model => model.Price, new { @class = "form-control" })
            @Html.ValidationMessageFor(model => model.Price)
        </div>
        <div class="form-group">
            @Html.LabelFor(model => model.Item)
            @Html.TextBoxFor(model => model.Item, new { @class = "form-control" })
            @Html.ValidationMessageFor(model => model.Item)
        </div>
        <div class="form-group">
            @Html.LabelFor(model => model.Company)
            @Html.TextBoxFor(model => model.Company, new { @class = "form-control" })
            @Html.ValidationMessageFor(model => model.Company)
        </div>
        <div class="form-group select-width">
            @Html.LabelFor(model => model.Availability)
            @Html.DropDownList("Availability", new SelectList(new string[] { "Available", "Not Available" }),
            String.Empty, new { @class = "form-control" })
            @Html.ValidationMessageFor(model => model.Availability)
        </div>
        <div class="form-group">
            @Html.LabelFor(model => model.Img)
        </div>
        <div class="form-group">
            <input type="file" name="file" />
        </div>
        <div class="form-group">
            <input type="submit" value="Create" />
        </div>
}
<div>
    @Html.ActionLink("Back", null, null, null, new { href = Request.UrlReferrer })
</div>
